AzQtComponents--BrowseEdit
{
    margin: 2px;
}

AzQtComponents--BrowseEdit QLineEdit
{
    height: 16px;
    border-width: 0px;
    border-style: solid;
    border-color: #444444;
    border-top-left-radius: 2px;
    border-bottom-left-radius: 2px;
    border-top-right-radius: 0px;
    border-bottom-right-radius: 0px;
}

AzQtComponents--BrowseEdit QLineEdit:focus
{
    background-color: #FFFFFF;
    border-color: #FFFFFF;
}

AzQtComponents--BrowseEdit QLineEdit:disabled
{
    border-color: #777777;
}

AzQtComponents--BrowseEdit #attached-button
{
    max-width: 16px;
    min-width: 16px;
    max-height: 16px;
    min-height: 16px;

    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                      stop: 0 #666666, stop: 1 #555555);

    border-width: 0px;
    border-style: solid;
    border-left: none;
    border-top-left-radius: 0px;
    border-bottom-left-radius: 0px;
    border-top-right-radius: 2px;
    border-bottom-right-radius: 2px;
}

AzQtComponents--BrowseEdit #attached-button:hover
{
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                      stop: 0 #777777, stop: 1 #666666);
}

AzQtComponents--BrowseEdit #attached-button:pressed
{
    background-color: #444444;
}

AzQtComponents--BrowseEdit #attached-button:disabled
{
    background-color: #777777;
    border-left: 1px solid #222222;
}